<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.editpassword.EditPasswordActivity">

    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/et_new_password"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:theme="@style/Theme.EditText.Blue"/>

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:inputType="textPassword"
        android:layout_above="@id/et_new_password_again"
        android:hint="请输入新密码"
        android:theme="@style/Theme.EditText.Blue"/>

    <EditText
        android:id="@+id/et_new_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_centerVertical="true"
        android:inputType="textPassword"
        android:hint="请再一次输入新密码"
        android:theme="@style/Theme.EditText.Blue"/>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_below="@id/et_new_password_again"
        android:background="@color/blue"
        android:text="取消"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/et_new_password_again"
        android:background="@color/blue"
        android:text="确定"
        android:textColor="@color/white"/>

</RelativeLayout>