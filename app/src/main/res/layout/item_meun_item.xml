<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/TwelveDp"
                android:paddingTop="@dimen/TwelveDp">

    <ImageView
        android:id="@+id/image_item_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/tv_item_describe"
        android:layout_toEndOf="@id/image_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/SixteenDp"
        tools:text="我的信息"/>

    <ImageView
        android:id="@+id/image_item_arrow"
        android:layout_alignParentEnd="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_right_arrow"/>


</RelativeLayout>